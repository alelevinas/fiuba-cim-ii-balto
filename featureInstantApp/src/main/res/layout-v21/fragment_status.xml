<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/title_mascot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text='Estado de "Lucky": '
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:id="@+id/status_mascot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="EN REPOSO"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="36sp" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meal_card_view"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/meal_view"
                        android:layout_width="116dp"
                        android:layout_height="103dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/alimento1" />

                    <TextView
                        android:id="@+id/meal_data"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="68dp"
                        android:layout_below="@+id/meal_view"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-11dp"
                        android:text="124 gr"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorAccent"
                        android:textSize="32dp" />

                    <TextView
                        android:id="@+id/meal_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meal_data"
                        android:layout_marginTop="0dp"
                        android:text="Restante: 426 gr"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drink_card_view"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/drink_view"
                        android:layout_width="116dp"
                        android:layout_height="103dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/agua1" />

                    <TextView
                        android:id="@+id/drink_data"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="68dp"
                        android:layout_below="@+id/drink_view"
                        android:layout_marginTop="-11dp"
                        android:text="334 cc"
                        android:layout_centerHorizontal="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary"
                        android:textSize="32dp" />

                    <TextView
                        android:id="@+id/drink_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/drink_data"
                        android:layout_marginTop="0dp"
                        android:text="Restante: 10 cc"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/weight_card_view"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/weight_view"
                        android:layout_width="116dp"
                        android:layout_height="99dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/peso1" />

                    <TextView
                        android:id="@+id/weight_data"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_below="@+id/weight_view"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-11dp"
                        android:text="12,440 Kg"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorAccent"
                        android:textSize="32dp" />

                    <TextView
                        android:id="@+id/weight_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weight_data"
                        android:layout_marginTop="0dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="Peso a las 14:22"
                        android:textSize="14dp"
                        android:textColor="?attr/colorPrimary" />
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/physical_card_view"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/physical_view"
                        android:layout_width="116dp"
                        android:layout_height="103dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/agua1" />

                    <TextView
                        android:id="@+id/physical_data"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="68dp"
                        android:layout_below="@+id/physical_view"
                        android:layout_marginTop="-11dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="32dp"
                        android:text="00:24 hs"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/material_lime_a700"/>

                    <TextView
                        android:id="@+id/physical_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/physical_data"
                        android:layout_marginTop="0dp"
                        android:text="Por hacer: 00:36 hs"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/material_lime_a700"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/title_environment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text='Estado del ambiente "Living"'
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/temperature_card_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/temperature_view"
                    android:layout_width="116dp"
                    android:layout_height="103dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/temperatura1" />

                <TextView
                    android:id="@+id/temperature_data"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_below="@+id/temperature_view"
                    android:layout_marginTop="-11dp"
                    android:layout_centerHorizontal="true"

                    android:text="23 ºC"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary"
                    android:textSize="36sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>

